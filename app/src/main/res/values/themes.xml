<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokemon" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark_logo</item>
        <item name="colorPrimaryVariant">@color/blue_dark_logo</item>
        <item name="colorOnPrimary">@color/yellow_shadow_logo</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark_logo</item>
        <item name="colorSecondaryVariant">@color/blue_dark_logo</item>
        <item name="colorOnSecondary">@color/yellow_shadow_logo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_dark_logo</item>
        <item name="colorPrimaryDark">@color/blue_dark_logo</item>
        <item name="colorAccent">@color/yellow_shadow_logo</item>
        <item name="android:navigationBarColor">@color/blue_dark_logo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customItemStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>